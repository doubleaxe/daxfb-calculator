{
  "include": ["./*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
