{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "sourceMap": true,
    "lib": [
      "ES2022",
      "DOM",
    ],
    "paths": {
      "@/*": ["./src/*"],
      "#types/*": ["./data/types/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
